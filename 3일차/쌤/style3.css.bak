@charset "utf-8";

/*공통 스타일*/
body,h1,h2,h3,h4,h5,h6,p,table,th,tr,td,ul,ol,li{font-family:"Noto Sans KR"; margin:0; padding:0;}
img{border:0;}
a{color:#454545; text-decoration:none;}
table{border-collapse:collapse; border-spacing:0;}
ul,ol,li{list-style:none;}


/* 레이아웃 */
.wrap {overflow:hidden; width:750px; margin:0 auto;}
.wrap .left,
.wrap .right{height:1200px;float:left;box-sizing:border-box;-webkit-box-sizing:border-box;}

.wrap .left{width:60%;}
.wrap .right{width:40%;padding-left:50px; }

.left h4,
.right h4 {color:#222; letter-spacing:-1px; padding-bottom:20px;}

/* left */
.left > div p{font-size:13px; color:#666; font-weight:400;line-height:145%; letter-spacing:-0.5px;margin-bottom:5px;}
.left > div p b{font-size:21px; color:#222; font-weight:700;}
.left > div p span{font-size:14px;color:#396db;,margin-left:10px;,margin-bottom:10px;}

.left > ul{margin-top:20px;}
.left > ul li{font-size:16px;margin-bottom:7px;}
.left > ul li a{color:#222; font-weight:500;} 
.left > ul li a span{font-size:14px;color:#396bb; margin-left:10px;}

/* right */
.right > ul li{font-size:14px;padding-bottom:20px;}
.right > ul li a{color:#222;font-weight:500;}
.right > ul li a p + p{color:#396dbb;}

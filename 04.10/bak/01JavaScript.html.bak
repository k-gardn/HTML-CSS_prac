 <body>
	<script language="JavaScript">
		<!--  -->
		/*두줄이상 주석문 처리*/
		//한줄짜리 주석, 문자열은 반드시 ""사용
		//document.write() 출력 명령문, 괄호()안에 내용
		document.write("오늘은 월요일입니다.");

		//태그
		document.write("<br><br><br>");
		document.write("여기는 신촌입니다.");
		document.write("<br>");

		//변수 : 영문 + 숫자
		a=10
		b=20
		d= a + b // 연산자
		document.write(d);

		//진리값
		x = a < b
		document.write("<br>");
		document.write(x);

		//무한
		y = 1 / 0
		document.write("<br>");
		document.write(y);
	</script>
 </body>

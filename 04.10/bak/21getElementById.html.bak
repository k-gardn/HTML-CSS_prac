 <body>

 	<div id="test1">
		<a href="#" onclick="opens()">펼치기</a>
	</div>

	<div id="test2">
		<a href="#" onclick="fold()">접기</a>
		<p>접었을까? 보일까?</p>
	</div>
	
	<script language="JavaScript">
		document.getElementById("test2").style.display = "none"
		function open(){
			document.getElementById("test1").style.display = "none"
			document.getElementById("test2").style.display = "block" //block 생략가능
		}
		function fold(){
			document.getElementById("test1").style.display = ""//block 생략가능
			document.getElementById("test2").style.display = "none" 
		}
	</script>

  
 </body>

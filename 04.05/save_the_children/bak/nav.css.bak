@charset "utf-8";

/* *반응형 퍼블리싱 width단위
1580/1350/1300/1200/1024/
975/828/768/667/560/540/480/420/375/320 */

nav{width:100%; height:70px; line-height:70px; background:#f5f5f5;
border-top:1px solid #f0f0f0;}

nav ul.nav-list{display:flex;}
nav ul li{width:20%; text-align:center;}
nav ul li a{display:block; font-size:17px; font-weight:500;}
nav ul li:hover{height:68px; line-height:68px;  border-bottom:2px solid #dcabaf;}
nav ul li:hover a{color:#dcabaf;}

#mobile_menu{position:absolute; right:0; top:0; line-height:115px;}
#mobile_menu h1{padding-top:10px;}
.mNav{position:absolute; right:4%; top:31%; z-index:99999999999;}
.mNav a{display:block; width:50px; height:33px;}
.mNav a span{display:block; background:#b44c55; width:100%; height:3px; margin-bottom:14px;}

/* ***************************************************************************** */
/* responsive */
@media screen and (max-width:1024px){
  nav, header > h1, .logo, .memberBox, .search{display:none;}
  #mobile_menu{display:block;}
	#mobile_menu h1{padding-left:20px;}
} 

@media screen and (max-width:420px){
	#mobile_menu h1{padding-left:0; text-indent:-10px;}
	#mobile_menu h1 a img{transform:scale(0.8); -webkit-transform:scale(0.8); -moz-transform:scale(0.8);}
	.mNav a{ width:36px; height:25px;}
	.mNav a span{margin-bottom:9px;}
}

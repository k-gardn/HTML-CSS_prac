  <style type="text/css">
		h2{margin:40px 0;}
		.switch_btn{
			position:relative;
			display:inline-block;
		}
		.switch_btn input{display:none;}
		.switch_btn label{
			display:block;
			width:48px;
			height:24px;
			text-indent:-250%;
			user-select:none;
		}
		.switch_btn label:before,
		.switch_btn label:after{
			content:"";
			display:block;
			position:absolute;
			cursor:pointer;
		}
		.switch_btn label:before{
			width:100%;
			height:100%;
			background-color:#dedede;
			border-radius:1em;
		}
		.switch_btn label:after{
			width:24px;
			height:24px;
			left:0;
			top:0;
			border-radius:50%;
			background-color:#fff;
			box-shadow:0 0 4px rgba(0,0,0,0.45);
		}
		.switch_btn input:checked + label:before{
			background-color:#3399ff;
		}
		.switch_btn input:checked + label:after{
			left:24px;
		}

	</style>
 <body>
  <h2>스위치버튼</h2>
	<div class="switch_btn">
		<input type="checkbox" name="switch_btn1" id="switch_btn1" value="1">
		<label for="switch_btn1">스위치</label>
	</div>

 </body>
</html>

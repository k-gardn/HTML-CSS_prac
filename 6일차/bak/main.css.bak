@charset "utf-8";

#wrap{width:100%;}
.header{width:100%; height:200px; background:#ff6600;}
.visual{width:100%; height:380px; background:#ffcc00;}
.footer{width:100%; height:380px; background:#cccccc;}

/* content*/
.content{width:1200px; margin:70px auto;}
.content .top{box-sizing:border-box;-webkit-box-sizing:border-box;font-size:0;margin:0 auto;
}
.content .top span{font-size:16px;color:#000;font-weight:400;
display:inline-block; width:24%; height:50px; line-height:50px;background:#f6f6f6;
border-right:1px solid #ddd;border-top:1px solid #ddd; border-bottom:1px solid #ddd;
text-align:center; }

.content .top span:first-child{color:#fff;background:red;}


.content > div:nth-child(2){width:100% ;margin:50px auto;text-align:center;}
.content > div:nth-child(2) h2{margin-bottom:20px;}


.content table{display:inline-block;width:100%;border-top:2px solid #000; padding-top:10px;
border-bottom:1px solid #888;padding-bottom:20px;}
.content table colgroup{width:1100px;}
.content table tr{font-size:0;}
.content table tr{font-size:15px;font-weight:500;}
.content table tr th{display:inline-block;text-align:left; width:180px; padding-left:30px;margin:15px 0;font-size:15px;font-weight:500;}
.content table tr th > span{color:red;margin-left:5px;}

.content table tr td select{background:#f6f6f6;height:35px;border-radius:0;border:1px solid #ddd;font-size:14px;}
.content table td .arrow{display:inline-block;position:relative; right:20px;top:5px;}

.content table td .material-symbols-outlined{display:inline-block;height:35px;line-height:35px;vertical-align:middle;}

.time td span .form_w10{margin:0;}

.name td input{width:30%;height:35px;background:#f6f6f6;}
.number td input {width:10%;height:35px;background:#f6f6f6;}

.email td input {width:60%;height:35px;background:#f6f6f6;}

.content table tr textarea{height:125px;background:#f6f6f6;margin:20px 0;}

.overflow_auto{overflow:auto;height:125px;margin:20px 0;font-size:12px;}

.overflow_auto textarea, 
.overflow_auto input{font-size:12px;}

.btn_wrap{text-align:center; margin-top:50px;}
.btn_style1{width:250px; height:55px; background:#fff; border:1px solid #000; font-size:16px; color:#000;font-weight:600;}
.btn_wrap img{position:relative;right:45px;}
@charset "utf-8";

/*공통 스타일*/
body,h1,h2,h3,h4,h5,h6,p,table,th,tr,td,ul,ol,li{font-family:"Nanum Gothic"; margin:0; padding:0;}
img{border:0;}
a{color:#454545; text-decoration:none;}
table{border-collapse:collapse; border-spacing:0;}
ul,ol,li{list-style:none;}

/* 레이아웃 */
#wrap{width:100%; margin:0 auto; background:#f5f5f5; border-top: 1px solid #ddd; margin-top:30px}
.content{width:1200px; margin:0 auto;  overflow:hidden; padding:30px 0;border-bottom: 1px solid #ddd; }

.content .box{width:30%; margin: 0 20px;}
.content .box{float:left; }
.box > p{width:50%;float:left; box-sizing:border-box;}
.box > p  img{ width:160px; }
.box > div{width:45%;float:left; box-sizing:border-box;}
.box > div > span{font-size:14px;color: green; font-weight:600; margin-bottom:5px;}

.title{font-size:14px;font-weight:bold; margin:5px 0; }
.txt{font-size:12px;line-height:145%;  font-size:14px;  line-height:145%}